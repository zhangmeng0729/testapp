<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".muluActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text=">>>20以内的退位减法"
            android:textColor="@color/colorMainText"
            android:textSize="23dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="400dp"
            android:layout_height="115dp"
            android:layout_marginTop="30dp"
            android:layout_margin="4dp"
            android:background="@drawable/miaobian"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/textv1"

            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/textv2_1"
                android:layout_marginLeft="2dp"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:background="#ffffff"
                android:text="类型一：十几减9"
                android:textColor="@color/colorMainText"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="-16dp" />
            <TextView
                android:id="@+id/textv2_2"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:background="#ffffff"
                android:text="例题：12-9"
                android:textColor="@color/colorMainText"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="-16dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1_1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/miaobian"
                    android:onClick="oneClick"
                    android:text="开始练习"
                    android:textColor="#0066ff"
                    android:textSize="20dp"
                    app:layout_constraintTop_toTopOf="@id/textv2_2" />
                <Button
                    android:id="@+id/btn1_2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="开始测试"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/chumo"
                    android:onClick="one1Click" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="400dp"
            android:layout_height="115dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/miaobian"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/lin1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/textv3_1"
                android:layout_marginLeft="2dp"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_marginTop="2dp"
                android:background="#ffffff"
                android:text="类型二：十几减8、7、6"
                android:textColor="@color/colorMainText"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="-16dp" />
            <TextView
                android:id="@+id/textv3_2"
                android:layout_marginLeft="2dp"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:background="#ffffff"
                android:text="例题：13-7、14-8"

                android:textColor="@color/colorMainText"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="-16dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn2_1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/miaobian"
