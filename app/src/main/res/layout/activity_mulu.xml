<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".muluActivity">


    <TextView
        android:id="@+id/textv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:text=">>>20以内的退位减法"
        android:textColor="@color/colorMainText"
        android:textSize="23dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/miaobian"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/textv1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textv2_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="#E6E6E6"
            android:text="类型一：十几减9"
            android:textColor="@color/colorMainText"
            android:textSize="25dp"
            tools:layout_editor_absoluteX="-16dp" />
        <TextView
            android:id="@+id/textv2_2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="#E6E6E6"
            android:text="例题：12-9"

            android:textColor="@color/colorMainText"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="-16dp" />
        <Button
            android:id="@+id/btn1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始练习"
            android:background="@drawable/chumo"
            android:onClick="oneClick"
            app:layout_constraintTop_toTopOf="@id/textv2_2"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/miaobian"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/lin1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textv3_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="#E6E6E6"
            android:text="类型二：十几减8、7、6"
            android:textColor="@color/colorMainText"
            android:textSize="25dp"
            tools:layout_editor_absoluteX="-16dp" />
        <TextView
            android:id="@+id/textv3_2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="#E6E6E6"
            android:text="例题：13-7、14-8"

            android:textColor="@color/colorMainText"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="-16dp" />
        <Button
            android:id="@+id/btn2_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始练习"
            android:background="@drawable/chumo"
            android:onClick="twoClick"
            app:layout_constraintTop_toTopOf="@id/textv3_2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin3"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/miaobian"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/lin2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textv4_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="#E6E6E6"
            android:text="类型三：十几减5、4、3、2"
            android:textColor="@color/colorMainText"
            android:textSize="25dp"
            tools:layout_editor_absoluteX="-16dp" />
        <TextView
            android:id="@+id/textv4_2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="#E6E6E6"
            android:text="例题：11-3"

            android:textColor="@color/colorMainText"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="-16dp" />
        <Button
            android:id="@+id/btn3_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始练习"
            android:background="@drawable/chumo"
            android:onClick="threeClick"
            app:layout_constraintTop_toTopOf="@id/textv4_2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin4"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/miaobian"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/lin3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textv5_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="#E6E6E6"
            android:text="类型四：20以内的加减法"
            android:textColor="@color/colorMainText"
            android:textSize="25dp"
            tools:layout_editor_absoluteX="-16dp" />
        <TextView
            android:id="@+id/textv5_2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="#E6E6E6"
            android:text="例题：3+5、18-6"

            android:textColor="@color/colorMainText"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="-16dp" />
        <Button
            android:id="@+id/btn4_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始练习"
            android:background="@drawable/chumo"
            android:onClick="fourClick"
            app:layout_constraintTop_toTopOf="@id/textv5_2"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>