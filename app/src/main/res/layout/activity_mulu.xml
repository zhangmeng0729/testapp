            <TextView
                android:id="@+id/textv4_1"
                android:layout_marginLeft="2dp"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:background="#ffffff"
                android:text="类型三：十几减5、4、3、2"
                android:textColor="@color/colorMainText"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="-16dp" />
            <TextView
                android:id="@+id/textv4_2"
                android:layout_marginLeft="2dp"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:text="例题：11-3"
                android:textColor="@color/colorMainText"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="-16dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn3_1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/miaobian"
                    android:onClick="oneClick"
                    android:text="开始练习"
                    android:textColor="#0066ff"
                    android:textSize="20dp"
                    app:layout_constraintTop_toTopOf="@id/textv4_2" />
                <Button
                    android:id="@+id/btn3_2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="开始测试"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/chumo"
                    android:onClick="one1Click" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin4"
            android:layout_width="400dp"
            android:layout_height="115dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/miaobian"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/lin3"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/textv5_1"
